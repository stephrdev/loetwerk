build:
- dependencies[fetch_pip_dependencies]
- install
- test[run_tests]
- testresults[fetch_xunit_results]

dependencies[fetch_pip_dependencies]:
- spielwiese/requirements.txt

install:
- cd spielwiese && python setup.py install

test[run_tests]:
- cd spielwiese && nosetests --with-xunit

testresults[fetch_xunit_results]:
- spielwiese/nosetests.xml
